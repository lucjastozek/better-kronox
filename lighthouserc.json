{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/tgide25h",
        "http://localhost:3000/tgide24h",
        "http://localhost:3000/tgide23h",
        "http://localhost:3000/taind25h",
        "http://localhost:3000/taind24h",
        "http://localhost:3000/taine25h"
      ],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage --disable-gpu --headless"
      }
    },
    "assert": {
      "assertions": {
        "categories:accessibility": ["error", { "minScore": 0.85 }],
        "categories:best-practices": ["error", { "minScore": 0.85 }],
        "categories:seo": ["warn", { "minScore": 0.8 }],
        "categories:performance": ["warn", { "minScore": 0.7 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 4000 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 5000 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.15 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
